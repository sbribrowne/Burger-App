<h1>Burgers!</h1>

<h2>Burgers ready to be devoured</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{burger_name}}
      <button data-id="{{id}}">DEVOUR</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you've eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <input type="text" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
